{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noLib": false,
    "outDir": "dist/",
    "plugins": [],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ESNext",
    "typeRoots": ["node_modules/@types"],
  }
}
